#!/bin/bash

# bash script to configure lightdm.

configFile=/etc/lightdm/slick-greeter.conf
picturePath=/home/cookinduck/Pictures
if ls -ltr $picturePath | grep -q loginPicture ;then 
	echo ""
	echo "Login picture directory found. Continuing config..."
	echo ""
else
	echo ""
	echo "Making login picture directory..."
	echo ""
	(cd $picturePath; mkdir loginPicture)
fi

if ls -ltr $picturePath/loginPicture | grep -q loginPicture.png ;then
	echo "Picture \"loginPicture.png\" found. Continuing config..."
	echo ""
else 
	echo "Picture \"loginPicture.png\" not found. Grabbing default picture..."
	echo ""
	echo "NOTE: If you have a picture, ensure it is named \"loginPicture.png\". Continuing config..."
	echo ""
	wget https://i.imgur.com/E7ymJ5Y.png -P $picturePath/loginPicture
	(cd $picturePath/loginPicture; mv * loginPicture.png)
fi

echo "Moving login picture to default directory..."
echo ""
chmod 777 $picturePath/loginPicture/loginPicture.png
cp $picturePath/loginPicture/loginPicture.png /usr/share/backgrounds/f37/default/f37-01-day.png 

sed -i 's/#background=\/usr\/share\/backgrounds\/default.png/background=\/usr\/share\/backgrounds\/default.png/' $configFile
